@using CoreDemoModels;
@model Cinema

<tr>
    <td>@Model.Id</td>
    <td>
        <a class="font-italic" asp-controller="Movie" asp-action="Index" asp-route-cinemaId="@Model.Id">@Model.Name</a>
     </td>
    <td>@Model.Location</td>
    <td>@Model.Capacity</td>
    <td>
        <a class="btn btn-info mb-2" asp-controller="Movie" asp-action="Index" asp-route-cinemaId="@Model.Id">查看</a>
        <a class="btn btn-primary mb-2" asp-controller="Home" asp-action="Edit" asp-route-cinemaId="@Model.Id">编辑</a>
        <a class="btn btn-danger mb-2" onClick="return confirm('确定删除?');" asp-controller="Home" asp-action="Del" asp-route-cinemaId="@Model.Id">删除</a>

    </td>
    @*<td>@Html.ActionLink("查看电影院信息", "Index", "Movie", new { cinemaId = Model.Id }, new { @class = "btn btn-primary" })</td>*@
</tr>
