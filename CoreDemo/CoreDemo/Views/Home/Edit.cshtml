@model CoreDemoModels.Cinema
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">电影院名称</label>
            <div class="col-sm-10">
                <input type="text" value="@Model.Name" class="form-control" asp-for="Name">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Location" class="col-sm-2 col-form-label">电影院位置</label>
            <div class="col-sm-10">
                <input type="text" value="@Model.Location" class="form-control" asp-for="Location">
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Capacity" class="col-sm-2 col-form-label">电影院容纳人数</label>
            <div class="col-sm-10">
                <input type="number" value="@Model.Capacity" class="form-control" asp-for="Capacity">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-5">
                <button type="submit" class="btn btn-primary mb-2">修改</button>
                <a class="btn btn-primary mb-2" asp-controller="Home" asp-action="Index">返回</a>
                @*@Html.ActionLink("返回", "Index", "Home", new { }, new { @class = "btn btn-primary mb-2" })*@
            </div>
        </div>
    </form>
</div>









